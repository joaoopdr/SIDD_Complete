<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.SymptomChecker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="buttonStyle">@style/Widget.SymptomChecker.Button</item>
    </style>
</resources>
