<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPrescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes da Receita"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textViewPrescriptionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número da Receita"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Medicamento"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosagem"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequência"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição da Receita"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionDoctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Médico"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionDoctorCRM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRM do Médico"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da Receita"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionValidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validade da Receita"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/textViewPrescriptionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status da Receita"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageViewQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:contentDescription="QR Code da Receita"/>

    </LinearLayout>
</ScrollView>