<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/info_window_background"
    android:padding="10dp"
    android:gravity="center"
    android:layout_gravity="center">

    <!-- Nome do hospital -->
    <TextView
        android:id="@+id/hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Hospital"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="5dp" />

    <!-- Tempo estimado de fila -->
    <TextView
        android:id="@+id/queue_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo de fila: 0 minutos"
        android:textSize="14sp"
        android:textColor="#333333" />

    <!-- BotÃ£o para abrir no Waze -->
    <Button
        android:id="@+id/wazeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABRIR NO WAZE"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginTop="10dp" />

</LinearLayout>