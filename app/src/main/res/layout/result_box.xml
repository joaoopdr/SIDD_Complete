<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/box_background"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/diseaseNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/similarityPercentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Similarity: %" />

    <LinearLayout
        android:id="@+id/expandedDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <!-- Detailed information about the disease -->
        <TextView
            android:id="@+id/diseaseTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de DoenÃ§a: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/symptomsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sintomas: " />

        <TextView
            android:id="@+id/casesPerYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casos por Ano: " />
    </LinearLayout>
</LinearLayout>
